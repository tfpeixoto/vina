(function() {
  $('.blog-news').each(function(index, e){
    var feed_url = $(e).data('feed-url');
    var template = $('#post-template').html();
    $.getJSON(feed_url,  function(data){
      var content = template;

      if(data.count > 0) {
        var post = data.posts[0];

        post['date_original'] = '';
        post['share_url'] = '';
        post['share_title'] = '';

        Object.keys(post).forEach(function (key) {
          if(key == 'date') {
            post['date_original'] = post[key];

            var postDate = post[key].split(' ')[0].split('-');
            var postHour = post[key].split(' ')[1].split(':');
            var formatedDate = postDate[2] + '/' + postDate[1] + '/' + postDate[0] + ' às ' + postHour[0] + ':' + postHour[1];

            post[key] = formatedDate;
          }

          if(key == 'url') {
            post['share_url'] = post[key];
          }

          if(key == 'title') {
            post['share_title'] = post[key].trim();
          }

          var re = new RegExp('%{' + key + '}', 'g');
          content = content.replace(re, post[key]);
        });

        $(e).html(content);

        $(e).find('time').vejaFormatTimes();

        var options = {
          container : $(e).find('[data-social-toolbar]'),
          featured  : [],
          collapsed : []
        };

        $(e).find('[data-social-toolbar]').children().each(function() {

          var item = $(this);

          if (item.data('provider')) {
            options.featured.push(item.data('provider'));
          } else if (item.data('group')=='collapsed') {
            item.children().each(function() {
              options.collapsed.push($(this).data('provider'));
            });
          } else {
            item.remove();
          }
        });

        new UbberSocialToolbar(options);
      }
    });
  });
})();
</script>

	</body>
</html>
